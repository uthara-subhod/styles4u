<%- include ('../layouts/adminheader.ejs') %>
<div class="container">
<div class="page-inner">
    <!-- PAGE MAIN WRAPPER
================================================== -->
    <div id="main-wrapper">
        <!-- <form method="post" onsubmit="addCoupon()" action="/admin/addCoupon_post"> -->
            <!-- row -->
            <div class="row mb-3 mt-3">
                <div class="col-lg-10 mx-auto col-12 grid-margin">
                    <div class="card bg-white">
                        <div class="card-body mx-3">
                            <form action="/admin/coupon/add" method="post">
                            <div class="form-group mt-3">
                                <label for="exampleInput1">Coupon Title</label>
                                <input
                                    type="text"
                                    name="couponName"
                                    class="form-control"
                                    id="exampleInput1"
                                />
                            </div>
                            <div class="form-group pt-3">
                                <label for="exampleInput2">Coupon Code</label>
                                <input
                                    type="text"
                                    name="couponCode"
                                    class="form-control"
                                    id="exampleInput2"
                                />
                            </div>
                            <div class="row">
                                <div class="form-group pt-3 col-6">
                                <label>Start Date</label>
                                <input type="date" name="startDate" class="form-control" />
                                </div>
                                <div class="form-group pt-3 col-6">
                                <label>End Date</label>
                                <input type="date" name="endDate" class="form-control" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group pt-3 col-4">
                                    <label for="exampleInput3">Quantity</label>
                                    <input
                                        type="number"
                                        name="quantity"
                                        class="form-control"
                                        id="exampleInput3"
                                    />
                                    </div>
                                <div class="form-group pt-3 col-4">
                                <label for="exampleInput4">Minimum Spend</label>
                                <input
                                    type="number"
                                    name="minSpend"
                                    class="form-control"
                                    id="exampleInput4"
                                />
                                </div>
                                <div class="form-group pt-3 col-4">
                                <label for="exampleInput5">Limit</label>
                                <input
                                    type="number"
                                    name="limit"
                                    class="form-control"
                                    id="exampleInput5"
                                />
                                </div>
                            </div>
                            <div class="card-header bg-white">
                            <h5 class="mt-3">Discount</h5>
                            </div>
                            <div class="row">
                                <div class="form-group pt-3 col-6">
                                    <label for="exampleInput7">Type of Discount</label>
                                    <select class="form-select" id="exampleInput7" name="type">
                                        <option value="percent">Percentage off</option>
                                        <option value="flat">Flat off</option>
                                    </select>
                                </div>
                                <div class="form-group pt-3 col-6">
                                    <label for="exampleInput6">Amount</label>
                                    <input
                                        type="number"
                                        name="amount"
                                        class="form-control"
                                        id="exampleInput6"
                                    />
                                </div>
                            </div>
                             <% if (message) { %>
                                <p style="color:<%=color%>; text-align:center"><%= message %></p>
                                <% } %>
                            <div class="my-4 text-center">
                                <button type="submit" class="btn btn-primary px-5">Submit</button>
                             </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
           
    </div>
</div>
</div>

<%- include ('../layouts/adminfooter.ejs') %>