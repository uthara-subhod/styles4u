<%- include ('../layouts/adminheader.ejs') %>

<div class="col-lg-12">
    <div class="card mt-4">
    <div class="card-header bg-light py-4 ">
        <h4 class="mb-0">#Order Details</h4>
        <p class="mb-0"><%=order.order_id%></p>
    </div>
    <div class="card-body ">
        <section>
            <div class="container h-100">
                <div class="row">
                  <div class="card card-stepper text-black col-lg-4 col-md-6" style="border-radius: 16px;">
          
                    <div class="card-body pt-5 pl-5">
          
                      <span class="flex justify-content-between align-items-center mb-5 text-center">
                        <span>
                            <h5 class="mb-0 text-center" style="display: inline;">Order Placed By </h5><br><h6 class="text-primary" style="display: inline;"><%=order.user.username%></h6>
                        </span><br>
                        <p class="mb-0 px-0" style="font-size: 15px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; line-height: 16px; display: inline;">Order Placed on <span><%=order.order_date.toLocaleDateString('en-US', { year: 'numeric' , month: 'numeric' ,
                            day: 'numeric' });%></span></p>                                   
                      </span>
                    </div>
                  </div>
                  <div class="card card-stepper text-black  col-lg-4 col-md-6 ml-auto mt-1" style="border-radius: 16px;" id="status-change">
                    <div class="card-body pt-5 pl-5">
                        <h5 style="display: inline;">Status:</h5>
                        <a class="btn btn-small rounded-pill py-0 <%if(order.order_status=="pending"){%> btn-warning<%}else if(order.order_status=="shipped"){%>btn-secondary<%}else if(order.order_status=="pay"){%>btn-light<%}else if(order.order_status=="delivered"){%>btn-success<%}else{%>btn-danger<%}%>" id="orderStatus"><small><%=order.order_status%></small></a>
                        <%if(order.order_status=="pending"){%>
                        <br>
                        <select class="form-select col-8 mt-2" id="status-select">
                            <option value="null">Select</option>
                            <option value="shipped">Ship</option>
                            <option value="rejected">Reject</option>
                          </select>
                          <%}%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <div class="card mx-3">
            <div class="card">
                <div class="card-header">
                    Order details<br><small>Order items</small>
                </div>
                <div class="card-body">
                    
                          <%if(order.items.length){%>
                            <%for(let i=0;i<order.items.length;i++){%>
                              <div class="row gy-3 mb-2">
                                  <div class="col-lg-6">
                                    <div class="me-lg-5">
                                      <div class="d-flex">
                                        <img src="<%=order.items[i].productId.productImages[0]%>" class="border rounded me-3  mb-3" style="width: 30%" />
                                        <div class="ml-3">
                                          <a href="/product?id=<%=order.items[i].productId._id%>" class="text-dark ">
                                              <%=order.items[i].productId.productName%> </a>
                                          <p class="text-muted"><%=order.items[i].productId.color%>, <%=order.items[i].size.toUpperCase()%></p>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-lg-6 col-sm-6 col-6 d-flex flex-lg-column text-nowrap mb-2">
                                      <div class="">
                                          <div class="d-flex align-items-center"> <!-- Add d-flex and align-items-center here -->
                                            <!-- Minus button -->
                                            <!-- Quantity input field -->
                                            <label class="form-label mt-2 mr-2">Quantity:</label>
                                            <div class="input-group input-group-sm">
                                              <input type="number" class="text-center form-control col-4" id="<%=order.items[i].itemId%>"
                                                value="<%=order.items[i].quantity%>" style="width: 30px !important; height: 30px; background-color: white !important;" readonly/>
                                            </div>
                                          </div>
                                        </div>
                                    <div class="">
                                      <text class="h6" id="totalPrice<%=order.items[i].itemId%>"><span>&#x20B9;</span>
                                          <%=order.items[i].totalPrice%></text> <br />
                                      <small class="text-muted text-nowrap"> <span>&#x20B9;</span><%=order.items[i].productId.price%>/ per item </small>
                                    </div>
                                  </div>
                                </div>
                              
                            <%}%>
            <%}else{%>
              All products have been returned<%}%>
            
            
          </div>
        </div>
        <%if(return1.items.length){%>
          <div class="card">
            <div class="card-header">
                Return details<br><small>Returned items</small>
            </div>
            <div class="card-body">
              <%for(let i=0;i<return1.items.length;i++){%>
                <div class="row gy-3 mb-2">
                    <div class="col-lg-5">
                      <div class="me-lg-5">
                        <div class="d-flex">
                          <img src="<%=return1.items[i].productId.productImages[0]%>" class="border rounded me-3  mb-3" style="width: 30%" />
                          <div class="ml-3">
                            <a href="/product?id=<%=return1.items[i].productId._id%>" class="text-dark ">
                                <%=order.items[i].productId.productName%> </a>
                            <p class="text-muted"><%=return1.items[i].productId.color%>, <%=return1.items[i].size.toUpperCase()%></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-2 col-sm-6 col-6 d-flex flex-lg-column text-nowrap mb-2">
                        <div class="">
                            <div class="d-flex align-items-center"> <!-- Add d-flex and align-items-center here -->
                              <!-- Minus button -->
                              <!-- Quantity input field -->
                              <label class="form-label mt-2 mr-2">Quantity:</label>
                              <div class="input-group input-group-sm">
                                <input type="number" class="form-control text-center" id="<%=return1.items[i].itemId%>"
                                  value="<%=return1.items[i].quantity%>" style="width: 30px; height: 30px; background-color: white !important;" readonly/>
                              </div>
                            </div>
                          </div>
                      <div class="">
                        <text class="h6" id="totalPrice<%=return1.items[i].itemId%>"><span>&#x20B9;</span>
                            <%=return1.items[i].totalPrice%></text> <br />
                        <small class="text-muted text-nowrap"> <span>&#x20B9;</span><%=return1.items[i].productId.price%>/ per item </small>
                      </div>
                    </div>
                  </div>
                
              <%}%>
</div>
</div>
        <%}%>
          </div>
          <div class="card m-3">
            <div class="card-header">
                Shipping Address
            </div>
            <div class="card-body">
                <%=order.address.phoneNumber%>,<br>
                <%=order.address.buildingName%>,<%=order.address.street%>,<%=order.address.city%>,<br>
                <%=order.address.state%>,<%=order.address.country%>,
                <%=order.address.zipCode%>,
            </div>
          </div>
          <div class="card m-3">
            <div class="card-header">
                Payment Mode
            </div>
            <div class="card-body">
                <%if(order.payment_method=="cod"){%>Cash On Delivery<%}elseif(order.payment_method=="online"){%>Card Payment<br>Payment ID:<%=order.razorpay_payment_id%><%}else{%>Wallet<%}%>
            </div>
          </div>
      </div>
    </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.3/axios.min.js"></script>
    <script>
        document.getElementById('status-select').addEventListener('change',async function(event) {
          const status= event.target.value;
          if(status!="null"){
            let id='<%=order.order_id%>'
          let order =await axios({
                method: "post",
                url: `/admin/order/status`,
                data: {
                    id,status
                },
            }).then((data)=>{
                if(data.status){
                    if(data.status=="shipped"){
                        document.getElementById("status-change").innerHTML =`<div class="card-body pt-5 pl-5"> <h5 style="display: inline;">Status:</h5> <a class="btn btn-small rounded-pill py-0 btn-secondary" id="orderStatus"><small>${data.status}</small></a></div>`
                    }else{
                        document.getElementById("status-change").innerHTML =`<div class="card-body pt-5 pl-5"> <h5 style="display: inline;">Status:</h5> <a class="btn btn-small rounded-pill py-0 btn-warning" id="orderStatus"><small>${data.status}</small></a></div>`
                    }
                    
                }
            })
                location.reload();

          }
         
        });
      </script>
      
<%- include ('../layouts/adminfooter.ejs') %>