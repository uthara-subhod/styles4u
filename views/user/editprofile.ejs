<%- include("../layouts/profileheader.ejs") %>

            <!-- end left panel -->

            <!-- right panel -->
            <div class="col-lg-8">
                <div class="card mt-4">
                <div class="card-header bg-light py-4 ">
                    <h4 class="mb-0">My Profile</h4>
                    <p class="mb-0">Edit Profile</p>
                </div>
                <div class="card-body ">
                    
                    <form action="/user/<%=user.username%>/editProfile" method="post">
                            <div class="form-group">
                              <label class="form-control-label" for="input-username">Username</label>
                              <input type="text" id="input-username" class="form-control form-control-alternative bg-light" value="<%=user.username%>" name="username">
                          </div>
                            <div class="form-group">
                              <label class="form-control-label" for="input-email">Email address</label>
                              <input type="email" id="input-email" class="form-control form-control-alternative bg-light" value="<%=user.email%>" readonly>
                          </div>
                          <button type="submit" class="btn btn-primary">Update Profile</button>
                    </form>

                  </div>
                </div>
                </div>
            </div>
        </div>
</section>

