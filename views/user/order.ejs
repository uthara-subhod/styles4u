<%- include("../layouts/profileheader.ejs") %>


            <!-- end left panel -->

            <!-- right panel -->
            <div class="col-lg-8">
                <div class="card mt-4">
                <div class="card-header bg-light py-4 ">
                    <h4 class="mb-0">Order</h4>
                    <p class="mb-0">Take a look at your order</p>
                </div>
                <div class="card-body ">
                    <section>
                        <div class="container py-5 h-100">
                          <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12">
                              <div class="card card-stepper text-black" style="border-radius: 16px;">
                      
                                <div class="card-body p-5">
                      
                                  <div class="flex justify-content-between align-items-center mb-5 text-center">
                                    <div>
                                      <h5 class="mb-0 text-center">Order id </h5><h6 class="text-primary"><%=order._id%></h6>
                                    </div>
                                    <p class="mb-0 " style="font-size: 15px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; line-height: 16px;">Order Placed on <span><%=order.order_date.toLocaleDateString('en-US', { year: 'numeric' , month: 'numeric' ,
                                        day: 'numeric' });%></span></p>                                   
                                      <p class="mb-0"  style="font-size: 15px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; line-height: 15px;">Expected Arrival <span><%=delivery.toLocaleDateString('en-US', { year: 'numeric' , month: 'numeric' ,
                                        day: 'numeric' });%></span></p>
                                  </div>
                                  <%if(order.order_status!="cancelled"){%>
                                  <div class="progress">
                                    <div id="dynamic" class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                      <span id="current-progress"></span>
                                    </div>
                                  </div>
                                  <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-lg-flex align-items-center">
                                        <p class="fw-bold mb-0" style="font-size: 1vw;">Under Review</p>
                                    </div>
                                    <div class="d-lg-flex align-items-center">
                                        <p class="fw-bold mb-0" style="font-size: 1vw;">Shipped</p>
                                    </div>
                                    <%if(order.payment_method==="cod"){%>
                                    <div class="d-lg-flex align-items-center">
                                        <p class="fw-bold mb-0" style="font-size: 1vw;">Payment Pending</p>
                                    </div>
                                    <%}%>
                                    <div class="d-lg-flex align-items-center">
                                        <p class="fw-bold mb-0" style="font-size: 1vw;">Delivered</p>
                                    </div>
                                  </div>
                                  <%}else{%>
                                    <h5 class="text-danger text-center">You cancelled this order</h5>
                                    <%}%>
                                  <%if(order.order_status==="pay"){%>
                                  <a onclick="cod('<%=order._id%>')" class="btn btn-primary mt-3"> Pay now</a>
                                  <%}%>
                                </div>
                      
                              </div>
                            </div>
                          </div>
                        </div>
                      </section>
                      <div class="card">
                        <div class="card-header">
                            Order details<br><small>Your order items</small>
                        </div>
                        <div class="card-body">
                            <table class="table text-center table-primary">
                                <colgroup>
                                    <col width="100" />
                                    <col />
                                    <col width="1" />
                                    <col />
                                    <col width="100" />
                                    <col />
                                    <col width="1" />
                                    <col />

                                </colgroup>
                                <thead class="bg-primary text-dark">
                                    <tr>
                                        <th class="first">Image</th>
                                        <th class="text-center font-weight-500" >Product</th>
                                        <th class="text-center font-weight-500" >Size</th>
                                        <th class="text-center  font-weight-500" >Price</th>
                                        <th class="text-center  font-weight-500">Qty</th>
                                        <th class="text-start  font-weight-500">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="table-bordered">
                                    <% for( let i=0; i < order.items.length; i++ ) { %>
                                        <tr class="bg-light">
                                            <td class="product-thumbnail text-start">
                                                <a href="#"><img
                                                        src="<%=order.items[i].productId.productImages[0]%>"
                                                        alt="..." class="img-fluid" width="60vw"></a>
                                            </td>
                                            <td class="text-center" style="font-size: 1.2vw;">
                                                <a href="/product?id=<%=order.items[i].productId._id%>" class="text-dark ">
                                                    <%=order.items[i].productId.productName%>
                                                </a>
                                            </td>
                                            <td class="text-center text-dark" style="font-size: 1vw;">
                                                <%=order.items[i].size%>
                                            </td>
                                            <td class="text-center" style="font-size: 1vw;"><span>&#x20B9;</span>
                                                <%=order.items[i].productId.price%>
                                            </td>
                                            <td class="product-quantity"  style="font-size: 1vw;">
                                                <%=order.items[i].quantity%>                              
                                            </td>
                                            <td id="totalPrice<%=order.items[i].productId._id%>"
                                                class="product-subtotal text-center" style="font-size: 1vw;">
                                                <span>&#x20B9;</span>
                                                <%=order.items[i].totalPrice%>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                      </div>
                      <div class="card">
                        <div class="card-header">
                            Shipping Address
                        </div>
                        <div class="card-body">
                            <%=order.address.phoneNumber%>,<br>
                            <%=order.address.buildingName%>,<%=order.address.street%>,<%=order.address.city%>,<br>
                            <%=order.address.state%>,<%=order.address.country%>,
                            <%=order.address.zipCode%>,
                        </div>
                      </div>
                      <div class="card">
                        <div class="card-header">
                            Payment Mode
                        </div>
                        <div class="card-body">
                            <%if(order.payment_method=="cod"){%>Cash On Delivery<%}else{%>Card Payment<%}%>
                        </div>
                      </div>
                  </div>
                </div>
                </div>
            </div>
        </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
$(function() {
  var current_progress = 0;

  var orderStatus = "<%= order.order_status %>";
  var paymentMethod = "<%= order.payment_method %>";

  if (orderStatus === "pending") {
      current_progress = 3; // Update progress for pending with COD
  } else if (orderStatus === "shipped") {
    current_progress = 50; // Update progress for shipped
  } else if (orderStatus === "pay") {
    current_progress = 66; // Update progress for pay
  } else if (orderStatus === "delivered") {
    current_progress = 100; // Update progress for delivered
  }

  $("#dynamic")
    .css("width", current_progress + "%")
    .attr("aria-valuenow", current_progress)
    .text(current_progress + "% Complete");
});
</script>
