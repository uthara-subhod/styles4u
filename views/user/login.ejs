
<%- include ('../layouts/userheader.ejs') %>
<div class="container shadow p-3 mb-5 bg-white rounded col-lg-5 col-8 mt-5">
  <div class="mb-5 col-12">
    <br>
      <h2  class="text-center">Login</h2>
      <p class="text-center text-sm">Enter Login details to get access</p>
    </div>
    <div class="ml-auto mr-auto col-12 col-lg-11">
<form action="/login" method="post">
    <!-- Username input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form2Example1">Username</label>
      <input type="text" id="form2Example1" class="form-control" />
    </div>
  
    <!-- Password input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form2Example2">Password</label>
      <input type="password" id="form2Example2" class="form-control" />
    </div>
  
    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-5">
      <div class="col">
        <!-- Checkbox -->
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
          <label class="form-check-label text-lg-sm" for="form2Example31"> Remember me </label>
        </div>
      </div>
  
        <!-- Simple link -->
        <a href="#!" class="mr-3">Forgot password?</a>
    </div>
  
    <!-- Submit button -->
    <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary btn-block mb-4 col-lg-6">Login</button>
    </div>
    <!-- Register buttons -->
    <div class="text-center">
      <p>Don't have an account?<a href="/signup">Sign Up</a></p>
    </div>
  </form>
</div>
</div>
  
<%- include ('../layouts/userfooter.ejs') %>