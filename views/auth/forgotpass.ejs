
<%- include ('../layouts/userheader.ejs') %>
<div class="container shadow p-3 mb-5 bg-white rounded col-lg-5 col-8 mt-5">
  <div class="mb-5 col-12">
    <br>
      <h4  class="text-center text-normal">Lost your password?</h4>
      <p class="text-center" style="font-size: 15px;">Type your email/username and we will sent<br>you instructions on how to reset it.</p>
    </div>
    <div class="ml-auto mr-auto col-12 col-lg-11">
<form action="/forgot-password" method="post"  id="form1">
    <!-- Username input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="user">Username or Email Address</label>
      <div class="input-group form-outline mb-4">

        <input type="text" id="user" name="user" class="form-control">
        <div class="input-group-append" id="username_error" style="display: none;">
            <span class="input-group-text bg-transparent text-primary py-0">
              <button type="button" class="btn btn-light btn-sm py-0" data-toggle="tooltip" data-placement="right" title="Invalid username/email" style="height: 36px;">
                <i class="fas fa-exclamation-circle" style="color: rgb(255, 162, 0); font-size: 15px; line-height: 0px; "></i>
              </button>
            </span>
            </div>
            </div>
  
    </div>
    <br>
    <div class="d-flex justify-content-center">
      <p class="pr-5">For more information, visit <a href="#!" class="mr-3">support</a></p> 
      <button type="submit" class="btn btn-primary btn-block mb-4 col-lg-3">Send</button>
      </div>
    </div>

  </form>
  <br>
  <br>
</div>

  
<%- include ('../layouts/userfooter.ejs') %>